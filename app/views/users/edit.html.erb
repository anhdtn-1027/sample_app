<% provide :title, t(".edit_user") %>
<% provide :button_text, t(".save_change") %>
<% provide :user_path, user_path %>
<h1><%= t ".update_profile" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change"), Settings.user.avatar.gavatar_mail,
        target: "_blank", rel: "noopener" %>
    </div>
  </div>
</div>
