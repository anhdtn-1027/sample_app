<% provide :title, t(".login") %>
<h1><%= t ".login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
      <%= f.label t ".email" %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t ".password" %>
      <%= link_to t(".forgot_password"), new_user_password_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".remember_me" %></span>
      <% end %>
      <%= f.submit t(".login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t ".new_user" %>? <%= link_to t(".signup_now"), new_user_registration_path %></p>
    Hoặc <%= link_to new_user_confirmation_path do %>
      Kích hoạt tài khoản?
    <% end %>
  </div>
</div>
